devices:
  lounge-tv:
    type: smalltv-ultra
    host: 192.168.1.50
    polling: 30
    image:
      oversize: resize
      cropposition: center
      # Optional transformations applied to images before upload
      # flip: apply flips before upload (default false)
      flip:
        vertical: false
        horizontal: false
      # rotation degrees applied before upload; allowed values: 0, 90, 180, 270
      rotate: 0

mqtt:
  server: 127.0.0.1
  port: 1883
  basetopic: gm
  user: test
  password: test
  client: gm-controller

verify:
  afterCommand: true    # verify commands by reading the device JSON after sending
  retries: 3            # number of verification attempts
  initialDelayMs: 300   # delay before first verification check
  backoffMs: 200        # additional backoff between retries
  pollIntervalSeconds: 30  # periodic poll interval to refresh device state
